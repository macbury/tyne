<!DOCTYPE html>
<html>
<head>
  <title>Tyne - <%= title %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="wrapper">
    <div id="header">
      <div id="menu">
        <%= render :partial => "shared/menu" %>
      </div>
      <div id="page_info">
        <h1><%= title %></h1>
        <p><%= description %></p>
      </div>
    </div>
    <div id="content">
      <div id="left">
        <% yield(:sidebar) if content_for? :sidebar %>
      </div>
      <div id="main">
        <%= yield %>
      </div>
      <br style="clear: left;" />
    </div>
    <div id="footer">
      <%= render :partial => "shared/footer" %>
    </div>
  </div>
</body>
</html>
